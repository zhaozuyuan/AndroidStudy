<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@null">

        <Button
            android:id="@+id/btn_to_tcp_activity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="To TcpServerActivity"
            android:textAllCaps="false"/>

        <Button
            android:id="@+id/btn_to_drag_view_activity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="To DragViewActivity"
            android:textAllCaps="false"/>

        <Button
            android:id="@+id/btn_to_show_view_activity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="To ShowViewActivity"
            android:textAllCaps="false"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:background="@drawable/btn_state_background"
            android:focusable="true"
            android:onClick="stateBtnOnClick" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_gravity="center"
            android:onClick="imageOnClick"
            android:visibility="gone"
            android:src="@drawable/ic_launcher_foreground"/>

        <Button
            android:id="@+id/btn_to_activity_a"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="To AtcivityA"
            android:textAllCaps="false"/>

        <Button
            android:id="@+id/btn_to_activity_window"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="To WindowActivity"
            android:textAllCaps="false"/>

        <Button
            android:id="@+id/btn_to_image_activity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="To ImageActivity"
            android:textAllCaps="false"/>




    </LinearLayout>

</ScrollView>