<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SlideActivity">

    <com.example.hp.qunyingzhuan.widget.ScratchView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <com.example.hp.qunyingzhuan.widget.SlideButton
        android:id="@+id/btn_slide"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_centerInParent="true"
        android:background="@drawable/draw_by_selector"
        android:text="滑动"/>

    <com.example.hp.qunyingzhuan.widget.ClockView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerInParent="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp" />

</RelativeLayout>