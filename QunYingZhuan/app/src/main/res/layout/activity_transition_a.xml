<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".TransitionAActivity">

    <include layout="@layout/my_toolbar" android:id="@+id/my_toolbar"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:onClick="explode"
        android:text="explode"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:onClick="slide"
        android:text="slide"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:onClick="fade"
        android:text="fade"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:onClick="share"
        android:text="share"/>

    <Button
        android:id="@+id/btn_transition_a_share"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:transitionName="fab"
        android:background="@drawable/qunying_image"
        android:elevation="50dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_ripple"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:onClick="openAnimation"/>

    <ImageView
        android:id="@+id/iv_oval"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/qunying_image"
        android:layout_gravity="center"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:stateListAnimator="@animator/anim_change"/>

    <!--波纹有边界-->
    <!--selectableItemBackground-->
    <!--波纹无边界-->
    <!--selectableItemBackgroundBorderless-->

</LinearLayout>